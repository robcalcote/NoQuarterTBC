                @Html.ValidationMessageFor(model => model.NoteName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NoteDate, htmlAttributes: new { @class = "control-label col-md-2" })
